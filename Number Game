import java.util.Random;
import java.util.Scanner;

public class NumberGame {
    private static final int MAX_ATTEMPTS = 5;
    private static final int MIN_RANGE = 1;
    private static final int MAX_RANGE = 100;

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int totalRoundsWon = 0;
        boolean playAgain = true;

        System.out.println("Welcome to the Number Guessing Game!");

        while (playAgain) {
            if (playRound(scanner)) {
                totalRoundsWon++;
            }

            System.out.print("\nDo you want to play another round? (yes/no): ");
            String response = scanner.next().toLowerCase();
            playAgain = response.startsWith("y");
        }

        System.out.println("\nGame Over! You won " + totalRoundsWon + " round(s).");
        scanner.close();
    }

    private static boolean playRound(Scanner scanner) {
        Random random = new Random();
        int targetNumber = random.nextInt(MAX_RANGE - MIN_RANGE + 1) + MIN_RANGE; [cite_start]// Generate random number [cite: 16]
        int attempts = 0;

        System.out.println("\n--- Starting New Round ---");
        System.out.println("I've generated a number between " + MIN_RANGE + " and " + MAX_RANGE + ".");
        System.out.println("You have " + MAX_ATTEMPTS + " attempts to guess it.");

        [cite_start]while (attempts < MAX_ATTEMPTS) { // Limit the number of attempts [cite: 19]
            System.out.print("Enter your guess (" + (attempts + 1) + "/" + MAX_ATTEMPTS + "): ");
            
            if (scanner.hasNextInt()) {
                int userGuess = scanner.nextInt(); [cite_start]// Prompt the user to enter their guess [cite: 16]
                attempts++;

                if (userGuess == targetNumber) {
                    System.out.println("Congratulations! You guessed the number " + targetNumber + " correctly in " + attempts + " attempts!");
                    System.out.println("Your score for this round: " + (MAX_ATTEMPTS - attempts + 1) + " points."); [cite_start]// Display user's score [cite: 21]
                    return true; // Round won
                } else if (userGuess < targetNumber) {
                    System.out.println("Too low! Try again."); [cite_start]// Provide feedback [cite: 17]
                } else {
                    System.out.println("Too high! Try again."); [cite_start]// Provide feedback [cite: 17]
                }
            } else {
                System.out.println("Invalid input. Please enter an integer.");
                scanner.next(); // Clear invalid input
            }
        }

        System.out.println("You've run out of attempts! The correct number was: " + targetNumber);
        return false; // Round lost
    }
}
